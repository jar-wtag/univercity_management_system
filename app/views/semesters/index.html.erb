<div class=" section index container">
  <div class="row">
<div class=" semester index">
  <h2> Course details </h2>
  <%= link_to("Add New Semester", new_semester_path, class: "btn btn-primary") %>
  <br/><br/>
  <table class="listing" summary="semester-list">
    <tr class="header">
      <th>Id</th>
      <th>Name</th>
      <th>Duration in Month</th>
      <th>Actions</th>
    </tr>
    <% @semesters.each do |semester| %>
      <tr>
        <td>
          <%= semester.id %>
        </td>
        <td>
          <%= semester.name %>
        </td>
        <td>
          <%= semester.duration_in_month %>
        </td>
            <td class="actions">
              <%= link_to("Show", semester_path(semester), class: "btn btn-primary") %>
              <%= link_to("Edit", edit_semester_path(semester), class: "btn btn-primary") %>
              <%= link_to("Destroy", semester_path(semester), class: "btn btn-primary") %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <%= link_to("Back to Semesters", semesters_path, class: "btn btn-primary") %>
  </div>
</div>
